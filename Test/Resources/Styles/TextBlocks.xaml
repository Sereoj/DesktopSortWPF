<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:local="clr-namespace:Test.Resources.Styles">
    <ResourceDictionary.MergedDictionaries>
        <ResourceDictionary Source="/Resources/Colors/light.xaml"/>
    </ResourceDictionary.MergedDictionaries>
    <!--Верхняя панель ЗАГОЛОВОК-->
    <Style x:Key="TextBlockTitle" TargetType="TextBlock">
        <Setter Property="FontFamily" Value="/Fonts/#Comfortaa"/>
        <Setter Property="FontSize" Value="18"/>
        <Setter Property="FontWeight" Value="DemiBold"/>
        <Setter Property="Foreground" Value="{StaticResource TextForegroundTitle}"/>
        <Setter Property="Margin" Value="20,5,0,5"/>
        <Setter Property="Cursor" Value="Hand"/>
    </Style>
    <!--Левая панель с тестами-->
    <Style x:Key="TextBlockLeft" TargetType="TextBlock">
        <Setter Property="FontFamily" Value="/Fonts/OpenSans/#Open Sans"/>
        <Setter Property="Height" Value="21"/>
        <Setter Property="FontSize" Value="12"/>
        <Setter Property="TextWrapping" Value="Wrap"/>
        <Setter Property="Margin" Value="10"/>
        <Setter Property="Foreground" Value="White"/>
    </Style>
</ResourceDictionary>