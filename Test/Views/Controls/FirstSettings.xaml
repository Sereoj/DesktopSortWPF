<UserControl x:Class="Test.Views.Controls.FirstSettings"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Test.Views.Controls"
             mc:Ignorable="d" 
             d:DesignHeight="373" d:DesignWidth="684">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="24"/>
            <RowDefinition/>
            <RowDefinition Height="90"/>
        </Grid.RowDefinitions>
        <TextBlock Grid.Row="0" Text="Выберите необходимые форматы" FontSize="16" Margin="10,5,0,0" Style="{DynamicResource TextBlockTitle}" />
        <Grid Grid.Row="1">
            <Grid.ColumnDefinitions>
                <ColumnDefinition/>
                <ColumnDefinition/>
                <ColumnDefinition/>
                <ColumnDefinition/>
            </Grid.ColumnDefinitions>
            <Grid.RowDefinitions>
                <RowDefinition />
                <RowDefinition />
                <RowDefinition />
                <RowDefinition />
                <RowDefinition />
                <RowDefinition />
                <RowDefinition />
            </Grid.RowDefinitions>
            <CheckBox Content="Microsoft Word" Style="{DynamicResource CheckBoxStyle}"/>
            <CheckBox Content="Microsoft Excel" Grid.Row="1" Grid.Column="0" Style="{DynamicResource CheckBoxStyle}"/>
            <CheckBox Content="Microsoft Access" Grid.Row="2" Grid.Column="0" Style="{DynamicResource CheckBoxStyle}"/>
            <CheckBox Content="Microsoft Project" Grid.Row="3" Grid.Column="0" Style="{DynamicResource CheckBoxStyle}"/>
            <CheckBox Content="Microsoft PowerPoint" Grid.Row="4" Grid.Column="0" Style="{DynamicResource CheckBoxStyle}"/>
            <CheckBox Content="Microsoft OneNote" Grid.Row="5" Grid.Column="0" Style="{DynamicResource CheckBoxStyle}"/>
            <CheckBox Content="Изображения" Grid.Row="6" Grid.Column="0" Style="{DynamicResource CheckBoxStyle}"/>
            <CheckBox Content="Мультимедия" Grid.Row="0" Grid.Column="1" Style="{DynamicResource CheckBoxStyle}"/>
            <CheckBox Content="Архивы" Grid.Row="1" Grid.Column="1" Style="{DynamicResource CheckBoxStyle}"/>
            <CheckBox Content="Электронные книги" Grid.Row="2" Grid.Column="1" Style="{DynamicResource CheckBoxStyle}"/>
            <CheckBox Content="Шаблон 1" Grid.Row="3" Grid.Column="1" Style="{DynamicResource CheckBoxStyle}"/>
            <CheckBox Content="Шаблон 2" Grid.Row="4" Grid.Column="1" Style="{DynamicResource CheckBoxStyle}"/>
            <CheckBox Content="Шаблон 3" Grid.Row="5" Grid.Column="1" Style="{DynamicResource CheckBoxStyle}"/>
            <CheckBox Content="Шаблон 4" Grid.Row="6" Grid.Column="1" Style="{DynamicResource CheckBoxStyle}"/>
            <CheckBox Content="Шаблон 5" Grid.Row="0" Grid.Column="2" Style="{DynamicResource CheckBoxStyle}"/>
            <CheckBox Content="Шаблон 6" Grid.Row="1" Grid.Column="2" Style="{DynamicResource CheckBoxStyle}"/>
            <CheckBox Content="Шаблон 7" Grid.Row="2" Grid.Column="2" Style="{DynamicResource CheckBoxStyle}"/>
            <CheckBox Content="Шаблон 8" Grid.Row="3" Grid.Column="2" Style="{DynamicResource CheckBoxStyle}"/>
        </Grid>
        <Grid Grid.Row="2">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="2*"/>
                <ColumnDefinition Width="2*"/>
                <ColumnDefinition/>
            </Grid.ColumnDefinitions>
        </Grid>
    </Grid>
</UserControl>
