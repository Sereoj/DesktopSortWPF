<Window x:Class="Test.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml" mc:Ignorable="d"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:vm="clr-namespace:Test.ViewModels"
        Title="{Binding Title}" Height="506" Width="764" 
        ResizeMode="NoResize" WindowStyle="None">
    <Window.DataContext>
        <vm:MainWindowViewModel/>
    </Window.DataContext>
    <Window.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="/Resources/Colors/light.xaml"/>
                <ResourceDictionary Source="/Resources/Styles/Buttons.xaml" />
                <ResourceDictionary Source="/Resources/Styles/TextBlocks.xaml" />
            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>
    </Window.Resources>
<Grid>
    <Grid.ColumnDefinitions>
        <ColumnDefinition Width="625*"/>
        <ColumnDefinition Width="139*"/>
    </Grid.ColumnDefinitions>
    <Image Source="{Binding PathImageBackground}" Stretch="Fill" Grid.ColumnSpan="2"/>
    <Grid Grid.ColumnSpan="2">
        <Grid.RowDefinitions>

            <RowDefinition Height="28"/>
            <RowDefinition Height="2*"/>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="40"/>
            <RowDefinition Height="28"/>


        </Grid.RowDefinitions>

        <Grid.ColumnDefinitions>
            <ColumnDefinition  Width="*"/>
            <ColumnDefinition  Width="3*"/>
            <ColumnDefinition  Width="45"/>
            <ColumnDefinition  Width="45"/>
        </Grid.ColumnDefinitions>
            <Grid Background="#FF2E1795" Grid.ColumnSpan="4" Cursor="SizeAll" MouseDown="Grid_MouseDown"/>
            <TextBlock Grid.Column="0" Text="{Binding Title}" Style="{StaticResource TextBlockTitle}"/>
        <Button Grid.Column="2" Content="&#x005F;" Style="{StaticResource ButtonToolbar}">
            <Button.Template>
                <ControlTemplate TargetType="Button">
                    <Border Background="{TemplateBinding Background}">
                        <ContentPresenter Content="{TemplateBinding Content}"
                                        VerticalAlignment="Center"
                                        HorizontalAlignment="Center"
                                        />
                    </Border>
                </ControlTemplate>
            </Button.Template>
        </Button>
        <Button Grid.Column="3" Content="&#x0078;" 
                Style="{StaticResource ButtonToolbar}"
                Command="{Binding CloseApplicationCommand}">
            <Button.Template>
            <ControlTemplate TargetType="Button">
                <Border Background="{TemplateBinding Background}">
                    <ContentPresenter Content="{TemplateBinding Content}"
                                    VerticalAlignment="Center"
                                    HorizontalAlignment="Center"
                                    />
                </Border>
            </ControlTemplate>
        </Button.Template>
        </Button>

        <TextBlock Grid.Row="2" Text="Укажите путь до папки" Style="{StaticResource TextBlockLeft}"/>
        <TextBlock Grid.Row="3" Text="Укажите путь до папки" Style="{StaticResource TextBlockLeft}"/>
        
        <TextBox Grid.Row="2" Grid.Column="1" Text="{Binding TextBoxPath}">
            <TextBox.Style>
                <Style TargetType="TextBox">
                    <Setter Property="Foreground" Value="Black"/>
                    <Setter Property="Height" Value="36"/>
                    <Setter Property="Cursor" Value="IBeam"/>
                </Style>
            </TextBox.Style>
                <TextBox.Template>
                    <ControlTemplate TargetType="TextBox">
                        <Border CornerRadius="15" Background="{TemplateBinding Background}">
                            <ContentPresenter
                        Margin="15,0,0,0"
                        HorizontalAlignment="Left"
                        VerticalAlignment="Center"
                        Content="{TemplateBinding Text}"
                        Focusable="True"
                        />
                        </Border>
                    </ControlTemplate>
                </TextBox.Template>
            </TextBox>
        <TextBox Grid.Row="3" Grid.Column="1" Text="{Binding TextBoxPath1}">
            <TextBox.Style>
                <Style TargetType="TextBox">
                    <Setter Property="Foreground" Value="Black"/>
                    <Setter Property="Height" Value="36"/>
                    <Setter Property="Cursor" Value="IBeam"/>
                </Style>
            </TextBox.Style>
            <TextBox.Template>
                <ControlTemplate TargetType="TextBox">
                        <Border CornerRadius="15" Background="{TemplateBinding Background}">
                            <ContentPresenter
                        Margin="15,0,0,0"
                        HorizontalAlignment="Left"
                        VerticalAlignment="Center"
                        Content="{TemplateBinding Text}"
                        Focusable="True"
                        />
                        </Border>
                    </ControlTemplate>
            </TextBox.Template>
        </TextBox>
        <Button Grid.Row="2" Grid.Column="2" Content="&#xE92f;" Style="{StaticResource ButtonIcons}">
            <Button.Template>
                <ControlTemplate TargetType="Button">
                    <Border Background="{TemplateBinding Background}">
                        <ContentPresenter Content="{TemplateBinding Content}"
                                        VerticalAlignment="Center"
                                        HorizontalAlignment="Center"
                                        />
                    </Border>
                </ControlTemplate>
            </Button.Template>
        </Button>
        <Button Grid.Row="3" Grid.Column="2" Content="&#xE92f;" Style="{StaticResource ButtonIcons}">
            <Button.Template>
                <ControlTemplate TargetType="Button">
                    <Border Background="{TemplateBinding Background}">
                        <ContentPresenter Content="{TemplateBinding Content}"
                                        VerticalAlignment="Center"
                                        HorizontalAlignment="Center"
                                        />
                    </Border>
                </ControlTemplate>
            </Button.Template>
        </Button>

        <Button Grid.Row="4" Grid.Column="1" Content="Копировать" 
                HorizontalAlignment="Left" Style="{StaticResource ButtonStyle}">
            <Button.Template>
                <ControlTemplate TargetType="Button">
                    <Border CornerRadius="10" Background="{TemplateBinding Background}">
                        <ContentPresenter Content= "{TemplateBinding Content}"
                                        VerticalAlignment="Center"
                                        HorizontalAlignment="Center"
                                        />
                    </Border>
                </ControlTemplate>
            </Button.Template>
        </Button>
        <Button Grid.Row="4" Grid.Column="1" Content="Вырезать" 
                HorizontalAlignment="Right" Style="{StaticResource ButtonStyle}">

            <Button.Template>
                <ControlTemplate TargetType="Button">
                    <Border CornerRadius="10" Background="{TemplateBinding Background}">
                        <ContentPresenter Content= "{TemplateBinding Content}"
                                        VerticalAlignment="Center"
                                        HorizontalAlignment="Center"
                                        />
                    </Border>
                </ControlTemplate>
            </Button.Template>
        </Button>
            <Button Grid.Row="5" Grid.Column="3" Content="&#xE994;" Style="{StaticResource ButtonIcons}">
                <Button.Template>
                <ControlTemplate TargetType="Button">
                    <Border Background="{TemplateBinding Background}">
                        <ContentPresenter Content="{TemplateBinding Content}"
                                        VerticalAlignment="Center"
                                        HorizontalAlignment="Center"
                                        />
                    </Border>
                </ControlTemplate>
            </Button.Template>
        </Button>
            <Button Grid.Row="5" Grid.Column="2" Content="&#xE900;" Style="{StaticResource ButtonIcons}">
                <Button.Template>
                <ControlTemplate TargetType="Button">
                    <Border Background="{TemplateBinding Background}">
                        <ContentPresenter Content="{TemplateBinding Content}"
                                        VerticalAlignment="Center"
                                        HorizontalAlignment="Center"
                                        />
                    </Border>
                </ControlTemplate>
            </Button.Template>
        </Button>
            <StatusBar Grid.Row="6" Grid.ColumnSpan="4" Background="#FF2E1795">
                <StatusBarItem>
                    <TextBlock Text="Статус" Foreground="White" Margin="15,0,0,0"></TextBlock>
                </StatusBarItem>
            </StatusBar>
        </Grid>
</Grid>

    

</Window>
